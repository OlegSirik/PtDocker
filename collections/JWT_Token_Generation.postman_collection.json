{
  "info": {
    "name": "JWT Token Generation API",
    "description": "API для генерации JWT токенов (access и refresh)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Generate Access Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userLogin\": \"sys_admin\",\n  \"clientId\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/token",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "token"]
        },
        "description": "Генерирует access token с временем жизни 24 часа. Требуются права SYS_ADMIN или TNT_ADMIN."
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status is 200\", function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "if (pm.response.code === 200) {",
              "    var data = pm.response.json();",
              "    pm.test(\"Access token exists\", function() {",
              "        pm.expect(data.accessToken).to.exist;",
              "    });",
              "    pm.test(\"Token type is Bearer\", function() {",
              "        pm.expect(data.tokenType).to.equal(\"Bearer\");",
              "    });",
              "    pm.test(\"Expires in 24 hours\", function() {",
              "        pm.expect(data.expiresIn).to.equal(86400);",
              "    });",
              "    // Сохранить токен в переменную окружения",
              "    pm.environment.set(\"generated_access_token\", data.accessToken);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Generate Access Token (without clientId)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userLogin\": \"sys_admin\",\n  \"clientId\": null\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/token",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "token"]
        },
        "description": "Генерирует access token без указания clientId (будет использован дефолтный)."
      },
      "response": []
    },
    {
      "name": "Generate Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userLogin\": \"sys_admin\",\n  \"clientId\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/refresh-token",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "refresh-token"]
        },
        "description": "Генерирует refresh token с временем жизни 30 дней."
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status is 200\", function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "if (pm.response.code === 200) {",
              "    var data = pm.response.json();",
              "    pm.test(\"Refresh token exists\", function() {",
              "        pm.expect(data.refreshToken).to.exist;",
              "    });",
              "    pm.test(\"Expires in 30 days\", function() {",
              "        pm.expect(data.expiresIn).to.equal(2592000);",
              "    });",
              "    // Сохранить refresh token",
              "    pm.environment.set(\"generated_refresh_token\", data.refreshToken);",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Generate Token - User Not Found",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userLogin\": \"non_existent_user\",\n  \"clientId\": 1\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/token",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "token"]
        },
        "description": "Тест: попытка генерации токена для несуществующего пользователя (должен вернуть 404)"
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"Status is 404\", function() {",
              "    pm.response.to.have.status(404);",
              "});",
              "",
              "pm.test(\"Error message exists\", function() {",
              "    var data = pm.response.json();",
              "    pm.expect(data.message).to.exist;",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "your_admin_jwt_token_here",
      "type": "string"
    },
    {
      "key": "generated_access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "generated_refresh_token",
      "value": "",
      "type": "string"
    }
  ]
}

